<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Progress Wheel styles -->
    <style name="ProgressBarStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="barLength">20dp</item>
        <item name="barWidth">6dp</item>
        <item name="contourColor">@android:color/transparent</item>
        <item name="contourSize">0dp</item>
        <item name="delayMillis">0</item>
        <item name="radius">0dp</item>
        <item name="rimWidth">6dp</item>
        <item name="spinSpeed">1dp</item>
        <item name="textColor">@android:color/white</item>
        <item name="textSize">12sp</item>
    </style>

    <style name="ProgressBarStyle.Main" parent="@style/ProgressBarStyle">
        <item name="barColor">@color/colorPrimary</item>
        <item name="circleColor">@color/primaryLight</item>
        <item name="rimColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CircularProgressBarStyle.2" parent="@style/CircularProgressBarStyle.Full">
        <item name="cpb_selectorComplete">@drawable/cpb_idle_state_selector_full_complete</item>
        <item name="cpb_selectorError">@drawable/cpb_idle_state_selector_full_error</item>
    </style>

    <style name="CircularProgressBarStyle.Full" parent="@style/CircularProgressBarStyle">
        <item name="cpb_selectorIdle">@drawable/cpb_idle_state_selector_full</item>
        <item name="cpb_selectorComplete">@drawable/cpb_idle_state_selector_full</item>
        <item name="cpb_selectorError">@drawable/cpb_idle_state_selector_full</item>
        <item name="android:textColor">@drawable/selector_text_full</item>
    </style>

    <!-- Circular Progress Bar styles (from package ~.view.cpb) -->
    <style name="CircularProgressBarStyle">
        <item name="android:layout_width">112sp</item>
        <item name="android:layout_height">36sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cpb_textError">@string/error_caps</item>
        <item name="android:textSize">14sp</item>
        <item name="cpb_colorProgress">@android:color/transparent</item>
        <item name="cpb_colorIndicator">@color/material_light_green_500</item>
        <item name="cpb_colorIndicatorBackground">@color/material_light_green_500_20_percent</item>
    </style>

</resources>